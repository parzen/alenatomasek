extends layout

block content
  .container.col-md-12.column(style="background-color: #C0C0C0")
    .row.clearfix
      .col-md-12.column
        div(style="height: 25px")
    .row.clearfix
      .col-md-4.column
        include navbar
      .col-md-8.column(style="background-color: #{bcblock}; min-height:450px;")
        p
          if (authenticated)
            p(style="color: #d9534f")
              strong Bild editieren
            p
            form(action="/delete/bild/#{picFor}/#{inputs._id}", method="POST")
              input(type="hidden", name="_method", value="DELETE")
              button(type='submit') Bild l√∂schen

            hr(style="border-style: dashed")
            p
              img(style="max-width:300px;", src=inputs.bild)
            form(role='form', action="/update/bild/#{picFor}/#{inputs._id}", method="POST")
              input(type="hidden", name="_method", value="PUT")
              .form-group
                label Name des Bildes
                input.form-control(name="data[name]", type='text', value=inputs.name)
              .form-group
                label Beschreibung
                input.form-control(name="data[beschreibung]", type='text', value=inputs.beschreibung)
              button.btn.btn-default(type='submit') Update
            